---

const response = await fetch("https://jsonplaceholder.typicode.com/posts")
const posts = await response.json()


---

<style>
    *{
        margin: 0px;
        padding: 0px;
    }
    .grid-posts{
        display: grid;
        grid-template-columns: 33.333% 33.333% 33.333%;
        gap: 24px;
    }
    .post{
        border: 1px solid grey; 
        padding: 24px;
        border-radius: 5px;
    }
</style>

<h1>Latest post</h1>

<div class="grid-posts">
    { 
        posts.map(post => (
            <div class="post">
                <h1>{post.title}</h1>
                <p>{post.body}</p>
            </div>
            
        ))
    }
</div>