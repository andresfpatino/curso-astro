---
import Layout from "../components/layout.astro";

const hobbies = ['Programar', 'Leer', 'Jugar', 'Salir al Cine']
const isLogged = true

import ButtonSuscribe from '../components/ButtonSuscribe';
---

<Layout 
	pageTitle="Home" 
	metaDescription="Aprendiendo Astro framework">

	<p>
		{ isLogged 
			? 'Cerrar sesion' 
			: 'Iniciar sesion'
		}
	</p>

	<h1>Welcome Astro</h1>
	<h3>Hobbies:</h3>
	<ul>
		{ hobbies.map( hobby => 
			<li> 
				<b> {hobby} </b>
				<i><button type="button">Like</button></i>
			</li>
		)}
	</ul>

	<ButtonSuscribe client:visible/>
	
	
</Layout>